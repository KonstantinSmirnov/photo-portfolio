  <!-- PAGE OVERLAY -->
  <div id="page-overlay">

  </div>
  <!-- END PAGE OVERLAY -->

  <!-- SECTION HERO SLIDER -->
  <div class="row">
    <div id="hero-slider">
      <% @hero_carousel_slides.each do |slide| %>
        <div>
          <%= image_tag slide.image.url(:cover), class: 'img-fluid' %>
          <div class="slider-caption">
            <h1><%= slide.title %></h1>
            <p><%= slide.subtitle %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <!-- END SECTION HERO SLIDER -->

  <!-- SECTION ABOUT ME -->
  <% if @about %>
    <div class="row">
      <div id="about-me-section">
        <div class="col-md-12">
          <%= image_tag @about.portrait.url(:normal), class: 'portrait' %>

          <div class="offset-md-5 description">
            <h2 class="text-center"><%= @about.title %></h2>
            <p><%= simple_format @about.text %></p>
            <div class="text-center">
              <%= image_tag @about.signature.url(:normal), class: 'signature' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <!-- END SECTION ABOUT ME -->

  <!-- RECENT PROJECTS -->
  <% if @portfolio %>
    <div class="row">
      <div id="projects-section">
        <div class="col-sm-12">
          <h2 class="text-center"><%= @portfolio.home_title %></h2>
          <div class="row">
            <% @portfolio.projects.each do |project| %>
              <div class="col-sm-3 project-preview">
                <%= link_to project_path(project) do %>
                  <div class="overlay">
                    <h3 class="text-center"><%= project.title %></h3>
                  </div>
                <% end %>
                <%= image_tag project.photos.first.image.url(:thumb), class: 'img-fluid', alt: project.photos.first.alt %>
              </div>
            <% end %>
          </div>
          <div class="row text-center">
            <%= link_to 'Portfolio', portfolio_path, class: 'btn btn-default-dark btn-lg' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <!-- END RECENT PROJECTS -->

