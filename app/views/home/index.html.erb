  <!-- INSTAGRAM -->
  <% if @last_instagram_fotos %>
    <div class="row" id="instagram-section">
        <div class="col-md-4" >
          <div class="capture">
            <h2>Instagram</h2>
            <p><%= simple_format @instagram.text %></p>
            <a href="https://www.instagram.com/<%= @instagram.username %>" class="btn btn-default-dark btn-lg" target="_blank">Profile</a>
          </div>
        </div>
