<div class="row">
  <div id="contact-page">
    <%= image_tag @contact.image.url(:cover), class: '' %>
    <div id="contact-form">
      <div class="offset-sm-6 col-sm-6 col-md-6 col-lg-5">
          <h2>Contact</h2>
          <%= simple_format @contact.text %>
          <%= simple_form_for :email, html: { class: 'light' }  do |f| %>
            <%= f.input :name, label: false, placeholder: 'Name' %>
            <%= f.input :email, label: false, placeholder: 'Email' %>
            <%= f.input :topic, label: false, placeholder: 'Topic' %>
            <%= f.input :message, as: :text, label: false, placeholder: 'Message' %>
            <%= f.submit 'Send', class: 'btn btn-default-dark' %>
          <% end %>
      </div>
    </div>
  </div>

</div>
