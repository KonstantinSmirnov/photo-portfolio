<%= simple_form_for @about, url: admin_about_path, remote: true do |f| %>
  <%= f.input :title %>
  <%= f.input :text, input_html: { class: 'textarea-resizable' } %>
  <%= f.input :portrait, as: :file %>
  <%= f.input :signature, as: :file %>
  <%= f.submit class: 'btn btn-default-light' %>
  <%= link_to 'Cancel', cancel_admin_about_path, class: 'btn btn-default-light', remote: true %>
<% end %>
