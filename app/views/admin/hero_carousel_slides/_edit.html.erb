<div class="col-12 col-sm-5 col-lg-4">
  <%= image_tag @hero_carousel_slide.image.url(:thumb), class: 'img-fluid' %>
</div>
<div class="col-12 col-sm-7 col-lg-8">
  <%= simple_form_for @hero_carousel_slide, url: admin_hero_carousel_slide_path(@hero_carousel_slide), html: { autocomplete: 'off' }, remote: true do |f| %>
    <%= f.input :image, as: :file %>
    <%= f.input :title, label: false, placeholder: 'Title' %>
    <%= f.input :subtitle, label: false, placeholder: 'Subtitle' %>
    <%= f.submit 'Update', class: 'btn btn-default-light btn-processable' %>
    <%= link_to 'Cancel', admin_hero_carousel_slide_path(@hero_carousel_slide), remote: true, class: 'btn btn-default-light' %>
  <% end %>
</div>
