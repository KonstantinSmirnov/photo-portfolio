<div class="row" id="slide-<%= @hero_carousel_slide.id %>">
  <div class="col-md-3">
    <img src="http://placehold.it/300x200" class="img-fluid" alt="">
  </div>
  <div class="col-md-9">
    <%= simple_form_for @hero_carousel_slide, url: admin_hero_carousel_slides_path(slide_id: @hero_carousel_slide.id), remote: true do |f| %>
      <%= f.input :title, label: false, placeholder: 'Title' %>
      <%= f.input :subtitle, label: false, placeholder: 'Subtitle' %>
      <%= f.submit 'Create', class: 'btn btn-default-light' %>
      <%= link_to 'Cancel', admin_remove_new_form_path(slide_id: @hero_carousel_slide.id), method: :delete, remote: true, class: 'btn btn-default-light' %>
    <% end %>

  </div>
</div>
