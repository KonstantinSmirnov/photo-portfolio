<% if !@portfolio.nil? %>
  <div class="row">
    <div class="col-md-12">
      <h2><%= @portfolio.title %></h2>
      <h5><%= @portfolio.home_title %></h5>
      <p><%= simple_format @portfolio.description %></p>
    </div>
  </div>
  <hr>
  <%= link_to 'Edit', edit_admin_portfolio_path, remote: true, class: 'btn btn-default-light' %>
  <%= link_to 'Delete', admin_portfolio_path, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default-light' %>
<% else %>
  <h3>Page is not created</h3>
  <%= link_to 'Create', new_admin_portfolio_path, class: 'btn btn-default-light', remote: true %>
<% end %>
