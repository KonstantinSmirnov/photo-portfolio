<%= simple_form_for @portfolio, url: admin_portfolio_path, html: { autocomplete: 'off' }, remote: true do |f| %>
  <%= f.input :title %>
  <%= f.input :home_title %>
  <%= f.input :description, input_html: { class: 'textarea-resizable' } %>
  <%= f.submit class: 'btn btn-default-light btn-processable' %>
  <%= link_to 'Cancel', cancel_admin_portfolio_path, class: 'btn btn-default-light', remote: true %>
<% end %>
